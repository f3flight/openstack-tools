#/bin/sh
pushd $(dirname $0) > /dev/null

if [ "$#" -gt 2 ] || [ "$1" == "-h" ] || [ "$1" == "--help" ]
then
	echo "Usage: initialize [database name] [table name]"
	exit 0
fi

if [ "$1" != "" ]
then
	DB_NAME="$1"
else
	DB_NAME="bench_resptime"
fi

if [ "$2" != "" ]
then
	TBL_NAME="$2"
else
	TBL_NAME="results"
fi

echo "export DB_NAME=$DB_NAME" > ./.config
echo "export TBL_NAME=$TBL_NAME" >> ./.config
./create_database
